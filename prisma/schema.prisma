generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
  SUPER_ADMIN
}

enum PaymentType {
  PAYMENT
  ELECTRICITY_CHARGES
  ADJUSTMENT
}

model User {
  id            String           @id @default(cuid())
  email         String           @unique
  name          String?
  password      String
  role          Role            @default(CLIENT)
  city          String?
  country       String?
  dateOfBirth   DateTime?
  phoneNumber   String?
  streetAddress String?
  companyName   String?
  idNumber      String?
  companyUrl    String?
  profileImage  String?
  profileImageId String?
  twoFactorEnabled Boolean      @default(false)
  twoFactorSecret String?
  twoFactorBackupCodes String[]
  luxorSubaccountName String?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  blacklisted   TokenBlacklist[]
  activities    UserActivity[]
  miners        Miner[]
  costPayments  CostPayment[]

  @@map("users")
}

model TokenBlacklist {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([token])
  @@map("token_blacklist")
}

model UserActivity {
  id        String   @id @default(cuid())
  userId    String
  type      String
  ipAddress String
  userAgent String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("user_activities")
}

model Miner {
  id            String    @id @default(cuid())
  name          String
  model         String
  status        String    @default("INACTIVE") // ACTIVE or INACTIVE
  powerUsage    Float     // in kilowatts
  hashRate      Float     // in TH/s
  userId        String
  spaceId       String
  user          User      @relation(fields: [userId], references: [id], onDelete: Restrict)
  space         Space     @relation(fields: [spaceId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("miners")
}

model Space {
  id            String    @id @default(cuid())
  name          String
  location      String
  capacity      Int       // Total number of mining spots
  powerCapacity Float     // Total power capacity in kilowatts
  status        String    @default("AVAILABLE") // AVAILABLE or OCCUPIED
  miners        Miner[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("spaces")
}

model CostPayment {
  id            String        @id @default(cuid())
  userId        String
  amount        Float
  consumption   Float
  type          PaymentType
  narration     String?       // Only for ADJUSTMENT: reason/description (max 500 chars)
  createdAt     DateTime      @default(now())
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("cost_payments")
}

model ElectricityRate {
  id            String        @id @default(cuid())
  rate_per_kwh  Float
  valid_from    DateTime
  created_at    DateTime      @default(now())

  @@index([valid_from])
  @@map("electricity_rates")
}

